{
  "name": "convolv-desktop",
  "productName": "Convolv Desktop",
  "description": "A quad console desktop app for working with data",
  "version": "0.1.0",
  "author": "Richard Griffith <sjefen@convo.lv>",
  "copyright": "Â© 2016, Convolv",
  "homepage": "https://convo.lv",
  "license": "MIT",
  "private": true,
  "main": "app/background.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/scribeGriff/convolv-desktop"
  },
  "build": {
    "appId": "lv.convo.convolv-desktop",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "fs-jetpack": "^0.10.2",
    "highcharts": "4.2.7",
    "mathjs": "^3.8.0",
    "moment": "^2.15.0",
    "papaparse": "^4.1.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "electron": "1.4.7",
    "electron-builder": "^8.6.0",
    "electron-mocha": "^3.0.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "minimist": "^1.2.0",
    "mocha": "^3.0.2",
    "rollup": "^0.36.3",
    "source-map-support": "^0.4.2",
    "spectron": "^3.3.0"
  }
}
